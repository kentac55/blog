{
  "name": "blog",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "npm run collect && next dev",
    "dev": "npm run collect && next dev",
    "now-build": "npm run collect && next build",
    "post": "node scripts/create.js",
    "collect": "node scripts/collect-meta.js",
    "export": "npm run now-build && next export",
    "lint": "eslint . --ext .ts,.tsx .",
    "fix": "eslint . --fix --ext .ts,.tsx ."
  },
  "dependencies": {
    "@types/ms": "^0",
    "@zeit-ui/react": "^1",
    "@zeit-ui/react-icons": "^1",
    "@zeit-ui/react-prism": "^1",
    "ms": "^2",
    "next": "^11",
    "react": "16",
    "react-dom": "16"
  },
  "devDependencies": {
    "@mapbox/rehype-prism": "^0",
    "@mdx-js/loader": "^1",
    "@next/mdx": "^10",
    "@types/node": "^16",
    "@types/react": "^16",
    "@types/react-dom": "^16",
    "@typescript-eslint/eslint-plugin": "^2",
    "@typescript-eslint/parser": "^2",
    "chalk": "^4",
    "eslint": "^6",
    "eslint-config-prettier": "^6",
    "eslint-plugin-prettier": "^3",
    "eslint-plugin-react": "^7",
    "extract-mdx-metadata": "^1",
    "fs-extra": "^10",
    "husky": "^7",
    "lint-staged": "^10",
    "prettier": "^2",
    "prompt-sync": "^4",
    "rehype-join-line": "^1",
    "styled-jsx": "^3",
    "typescript": "^4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run collect && lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ],
    "*.tsx": [
      "eslint --fix"
    ]
  }
}
